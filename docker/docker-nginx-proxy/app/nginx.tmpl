server {
  listen 80 default_server;
  server_name _; # This is just an invalid value which will never trigger on a real hostname.
  error_log /proc/self/fd/2;
  access_log /proc/self/fd/1;
  return 503;
}

{{ range $key, $container := . }}

  {{ $host := $container.Env.RAPIDFTR_HOST }}
  {{ if $host }}

    {{ $address := index $container.Addresses 0 }}

    # Redirect HTTP to HTTPS
    server {
      listen 80;
      server_name {{ $host }};
      rewrite ^(.*)$ https://$host$1 redirect;
    }

    # HTTPS VHost
    server {
      listen 443 ssl spdy;
      server_name {{ $host }};

      ssl on;
      ssl_certificate /data/{{ $host }}/certificate.crt;
      ssl_certificate_key /data/{{ $host }}/certificate.key;

      gzip on;
      gzip_disable "MSIE [1-6]\.";
      etag off;

      location / {
        proxy_pass http://{{ $address.IP }}:3000;
        include /etc/nginx/proxy_params;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
      }

      location ~ ^/assets/ {
        proxy_pass http://{{ $address.IP }}:3000;
        include /etc/nginx/proxy_params;
        proxy_http_version 1.1;
        proxy_set_header Connection "";

        expires max;
        add_header Cache-Control public;
        gzip_static on;
        break;
      }
    }

    # CouchDB
    server {
      listen 6984 ssl spdy;
      server_name {{ $host }};

      ssl on;
      ssl_certificate /data/{{ $host }}/certificate.crt;
      ssl_certificate_key /data/{{ $host }}/certificate.key;

      location / {
        proxy_pass http://{{ $address.IP }}:5984;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Ssl on;
      }

      location ~ ^/(.*)/_changes {
        proxy_pass http://{{ $address.IP }}:5984;
        proxy_redirect off;
        proxy_buffering off;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Ssl on;
      }
    }

  {{ end }}

{{ end }}
